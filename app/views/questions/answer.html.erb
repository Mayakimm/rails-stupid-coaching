<div class="container d-flex justify-content-center align-items-center">
  <div class="row">
    <div class="col">
      <h1 class="mb-3 pt-5 pb-3">Stupid Coaching</h1>
      <div class="border rounded-3 p-5">
        <p class="mb-0 rounded-pill bg-light ps-3 text-wrap" style="width: 30rem;"><%= @q%></p>
        <p class="text-end text-black-50">from: You</p>
        <p class="mb-0 rounded-pill bg-light ps-3 text-wrap" style="width: 30rem;"><%= @answer %></p>
        <p class="text-end text-black-50">from: Your coach</p>
        <%= link_to "Ask a new question", ask_path, class: "btn btn-info text-white mt-5" %>
      </div>
    </div>
  </div>
</div>
